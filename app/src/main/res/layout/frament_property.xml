<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="home.smart.fly.animations.AppStartActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cpb_white"
        android:orientation="vertical">


        <Button
            android:id="@+id/property"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/cpb_blue"
            android:text="PropertyAnimation"
            android:textColor="@color/cpb_white" />

        <Button
            android:id="@+id/value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/cpb_blue"
            android:text="PropertyValueAnimation"
            android:textColor="@color/cpb_white" />

        <Button
            android:id="@+id/animate_drawable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/cpb_blue"
            android:text="Animation Drawable"
            android:textColor="@color/cpb_white" />

        <Button
            android:id="@+id/demo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/cpb_blue"
            android:text="Pay_Anim"
            android:textColor="@color/cpb_white" />

        <Button
            android:id="@+id/shopcar_add_anim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/cpb_blue"
            android:text="shopcar_add_anim"
            android:textColor="@color/cpb_white" />

        <Button
            android:id="@+id/LayoutAnimations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/cpb_blue"
            android:text="LayoutAnimations"
            android:textColor="@color/cpb_white" />

        <Button
            android:id="@+id/RevealAnimator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/cpb_blue"
            android:text="RevealAnimator"
            android:textColor="@color/cpb_white" />

        <Button
            android:id="@+id/DecorView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/cpb_blue"
            android:text="DecorView"
            android:textColor="@color/cpb_white" />

        <Button
            android:id="@+id/PhysicsAnim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/cpb_blue"
            android:text="PhysicsAnim(物理动画)"
            android:textColor="@color/cpb_white" />


    </LinearLayout>
</ScrollView>